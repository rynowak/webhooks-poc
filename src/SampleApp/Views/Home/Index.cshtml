@model IndexViewModel

@{
    ViewData["Title"] = "Functions/WebHooks POC";
}


<div class="row">
    <div class="col-md-6">
        <h3>Current Functions</h3>
        <ul>
            @foreach (var entry in Model.Entries)
            {
                <li>@entry.Template</li>
            }
        </ul>
    </div>
    <div class="col-md-6">
        <h3>Edit Functions</h3>
        <form asp-action="Index">
            <textarea name="entries" style="width: 100%">
            @(string.Join(Environment.NewLine, Model.Entries.Select(e => e.Template)))
            </textarea>
            <div>
                <button type="submit">Update</button>
            </div>
        </form>
    </div>
</div>
